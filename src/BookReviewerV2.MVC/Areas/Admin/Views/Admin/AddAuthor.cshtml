@model AuthorFormModel

@{
    ViewData["Title"] = "Add Author | ";
}

<h2>Add Author</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Enter name">
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth"></label>
        <input asp-for="DateOfBirth" class="form-control" placeholder="dd.MM.yyyy">
    </div>
    <div class="form-group">
        <label asp-for="Details"></label>
        <textarea asp-for="Details" class="form-control" rows="3"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="PictureUrl"></label>
        <input asp-for="PictureUrl" class="form-control" placeholder="Photo URL">
    </div>
    <button type="submit" class="btn btn-dark">Submit</button>
</form>