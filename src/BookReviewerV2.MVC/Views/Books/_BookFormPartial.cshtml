@model BookFormModel

<form method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" placeholder="Enter title">
        <span asp-validation-for="Title" class="small text-danger"></span>
    </div>
   <div class="form-group">
          <label asp-for="BookGenres" class="control-label">Genres</label>
          <select asp-for="BookGenres" class="form-control selectpicker" data-live-search="true" multiple>
              @foreach (var genre in Model.Genres)
              {
                  <option value="@genre">@genre</option>
              }
          </select>
          <span asp-validation-for="BookGenres" class="text-danger"></span>
      </div>
    <div class="form-group">
        <label asp-for="YearPublished"></label>
        <input asp-for="YearPublished" class="form-control" placeholder="yyyy">
        <span asp-validation-for="YearPublished" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Pages"></label>
        <input asp-for="Pages" class="form-control">
        <span asp-validation-for="Pages" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CoverUrl"></label>
        <input asp-for="CoverUrl" class="form-control" placeholder="Photo URL">
        <span asp-validation-for="CoverUrl" class="small text-danger"></span>
    </div>
    <button type="submit" class="btn btn-dark">Submit</button>
</form>