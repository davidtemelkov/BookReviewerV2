@model ReviewFormModel

<form method="post" class="mt-4">
    <div class="form-group">
        <label asp-for="Stars"></label>
        <select asp-for="Stars" class="form-control">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
        </select>
        <span asp-validation-for="Stars" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Text"></label>
        <textarea asp-for="Text" class="form-control" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-dark">Submit</button>
</form>