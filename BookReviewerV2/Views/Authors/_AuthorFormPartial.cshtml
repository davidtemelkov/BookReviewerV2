@model AuthorFormModel

<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Enter name">
        <span asp-validation-for="Name" class="small text-danger"></span>
        </div>
    <div class="form-group">
        <label asp-for="DateOfBirth"></label>
        <input asp-for="DateOfBirth" class="form-control" placeholder="dd.MM.yyyy">
        <span asp-validation-for="DateOfBirth" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Details"></label>
        <textarea asp-for="Details" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Details" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PictureUrl"></label>
        <input asp-for="PictureUrl" class="form-control" placeholder="Photo URL">
        <span asp-validation-for="PictureUrl" class="small text-danger"></span>
    </div>
    <button type="submit" class="btn btn-dark">Submit</button>
</form>